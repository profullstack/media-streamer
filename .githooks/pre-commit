#!/bin/sh
# BitTorrented.com Pre-commit Hook
# Runs formatter on staged files, security audit, and GitHub Actions locally via act

echo "ğŸ¨ Running formatter on staged files..."

# Get list of staged JS/TS files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACMR | grep -E '\.(js|jsx|ts|tsx)$')

if [ -n "$STAGED_FILES" ]; then
    # Run ESLint with --fix on staged files
    echo "$STAGED_FILES" | xargs pnpm eslint --fix 2>/dev/null

    # Re-add the formatted files to staging
    echo "$STAGED_FILES" | xargs git add

    echo "âœ… Formatter applied to staged files"
else
    echo "â„¹ï¸  No JS/TS files to format"
fi

echo ""
echo "ğŸ” Running security audit..."
pnpm audit --audit-level=critical
AUDIT_EXIT_CODE=$?

if [ $AUDIT_EXIT_CODE -ne 0 ]; then
    echo ""
    echo "âŒ CRITICAL security vulnerabilities found! Please fix before committing."
    exit 1
fi

echo "âœ… No critical security vulnerabilities found"
echo ""
echo "ğŸ”¨ Running pre-commit checks via act..."
echo ""

act
ACT_EXIT_CODE=$?

if [ $ACT_EXIT_CODE -ne 0 ]; then
    echo ""
    echo "âŒ act failed! Please fix issues before committing."
    exit 1
fi

echo ""
echo "ğŸš€ Pre-commit checks complete. Proceeding with commit..."
